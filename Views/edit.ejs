<%- include("_header") -%>

<h1>Edit a record</h1>

<form action="/edit/<%= model.cusid %>" method="post"></form>
  <div class="form-horizontal">

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cusid">Customer ID</label>
        <div class="col-sm-7">
          <input autofocus class="form-control" name="cusid" value="<%= model.cusid %>"/>
        </div>
        <td>(Required)</td>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cusfname">First Nname</label>
        <div class="col-sm-7">
          <input class="form-control" name="cusfname" value="<%= model.cusfname %>"/>
        </div>
        <td>(Required)</td>
      </div>
    
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cuslname">Last Nname</label>
        <div class="col-sm-7">
          <input class="form-control" name="cuslname" value="<%= model.cuslname %>"/>
        </div>
        <td>(Required)</td>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cusstate">State</label>
        <div class="col-sm-7">
            <input class="form-control" type="text" name="cusstate" value="<%= model.cusstate %>" maxlength="2"/>
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cussalesytd">Sales YTD</label>
        <div class="col-sm-7">
          <input class="form-control" name="cussalesytd" value="<%= model.cussalesytd %>" />
        </div>
      </div>
    
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cussalesprev">Sales Prev</label>
        <div class="col-sm-7">
          <input class="form-control" name="cussalesprev" value="<%= model.cussalesprev %>" />
        </div>
      </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/searchcustomer">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>